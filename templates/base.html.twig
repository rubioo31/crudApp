{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}CRUD Excepcional{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Enlazar CSS externo -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% block extra_head %}{% endblock %}
</head>
<body>
    <header>
        <h1>{% block header_title %}CRUDAPP{% endblock %}</h1>
        <nav>
            <a href="{{ path('product_index') }}">Inicio</a>
            <a href="{{ path('product_new') }}">Nuevo Producto</a>
        </nav>
    </header>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
    <!-- Enlazar JavaScript externo -->
    <script src="{{ asset('js/script.js') }}"></script>
    {% block extra_scripts %}{% endblock %}
</body>
</html>
