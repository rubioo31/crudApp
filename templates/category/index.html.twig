{% extends 'base.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block body %}
    <h2>Listado de Categorias</h2>
    <a class="button" href="{{ path('category_new') }}">Nueva Categoria</a>
    <ul>
        {% for category in categories %}
            <li>
                <div>
                    <strong>{{ category.name }}</strong>
                </div>
                <div>
                    <a class="button" href="{{ path('category_show', {'id': category.id}) }}">Ver</a>
                    <a class="button" href="{{ path('category_edit', {'id': category.id}) }}">Editar</a>
                    <form action="{{ path('category_delete', {'id': category.id}) }}" method="post" onsubmit="return confirm('Â¿Seguro que deseas eliminar esta categoria?');" style="display:inline">
                        <input type="submit" value="Borrar">
                    </form>
                </div>
            </li>
        {% else %}
            <li>No hay categorias disponibles.</li>
        {% endfor %}
    </ul>
{% endblock %}
