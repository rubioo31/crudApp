{% extends 'base.html.twig' %}

{% block title %}Detalle de la Orden{% endblock %}

{% block body %}
    <h2>Detalle de la Orden</h2>
    <p><strong>ID:</strong> {{ order.id }}</p>
    <p><strong>Producto:</strong> {{ order.product_name }}</p>
    <p><strong>Cantidad:</strong> {{ order.quantity }}</p>
    <p><strong>Fecha de Orden:</strong> {{ order.order_date|date('Y-m-d H:i') }}</p>
    <a class="button" href="{{ path('order_index') }}">Volver</a>
{% endblock %}
