{# templates/product/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Listado de Productos{% endblock %}

{% block body %}
  <h1>Productos</h1>
  <a href="{{ path('product_new') }}">Crear nuevo producto</a>
  <ul>
    {% for product in products %}
      <li>
        <strong>{{ product.name }}</strong> – {{ product.price }} USD 
        {% if product.category_name %}
          (Categoría: {{ product.category_name }})
        {% endif %}
        <a href="{{ path('product_show', {'id': product.id}) }}">Ver</a>
        <a href="{{ path('product_edit', {'id': product.id}) }}">Editar</a>
        <form action="{{ path('product_delete', {'id': product.id}) }}" method="post" style="display:inline">
          <button type="submit">Borrar</button>
        </form>
      </li>
    {% else %}
      <li>No hay productos.</li>
    {% endfor %}
  </ul>
{% endblock %}
