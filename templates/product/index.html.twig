{% extends 'base.html.twig' %}

{% block title %}Listado de Productos{% endblock %}

{% block body %}
    <h2>Listado de Productos</h2>
    <a class="button" href="{{ path('product_new') }}">Crear Nuevo Producto</a>
    <ul>
        {% for product in products %}
            <li>
                <div>
                    <strong>{{ product.name }}</strong> – {{ product.price }} €
                    {% if product.category_name %}
                        <span>(Categoría: {{ product.category_name }})</span>
                    {% endif %}
                </div>
                <div>
                    <a class="button" href="{{ path('product_show', {'id': product.id}) }}">Ver</a>
                    <a class="button" href="{{ path('product_edit', {'id': product.id}) }}">Editar</a>
                    <form action="{{ path('product_delete', {'id': product.id}) }}" method="post" onsubmit="return confirm('¿Seguro que deseas eliminar este producto?');" style="display:inline">
                        <input type="submit" value="Borrar">
                    </form>
                </div>
            </li>
        {% else %}
            <li>No hay productos disponibles.</li>
        {% endfor %}
    </ul>
{% endblock %}
