{# templates/product/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Editar Producto{% endblock %}

{% block body %}
  <h1>Editar Producto</h1>
  <form method="post">
    <label for="name">Nombre:</label>
    <input type="text" name="name" id="name" value="{{ product.name }}" required>
    <br>
    <label for="price">Precio:</label>
    <input type="number" step="0.01" name="price" id="price" value="{{ product.price }}" required>
    <br>
    <label for="category_id">Categoría:</label>
    <select name="category_id" id="category_id">
      <option value="">-- Sin categoría --</option>
      {% for cat in categories %}
        <option value="{{ cat.id }}" {% if cat.id == product.category_id %}selected{% endif %}>{{ cat.name }}</option>
      {% endfor %}
    </select>
    <br>
    <button type="submit">Actualizar</button>
  </form>
  <a href="{{ path('product_index') }}">Volver al listado</a>
{% endblock %}
